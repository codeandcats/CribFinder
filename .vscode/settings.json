// Place your settings in this file to overwrite default and user settings.
{
	"editor.tabSize": 4,
	"editor.insertSpaces": false,
	"files.exclude": {
		"**/*.js": { "when": "$(basename).ts" },
		"**/*.map": { },
		"client/styles/**/*.css": true
	},
	"cSpell.enabledLanguageIds": [
		"javascript",
		"javascriptreact",
		"markdown",
		"plaintext",
		"text",
		"typescript",
		"typescriptreact"
	],
	// Specify paths/files to ignore.
    "cSpell.ignorePaths": [
        "node_modules",
        "vscode-extension",
        ".git"
    ]
}